<h1>Teaching assistants</h1>

<div class="card shadow mt-3">
  <div class="card-header">
    <%= icon_with_text("table", "一覧") %>
  </div>
  <div class="card-body mx-3">
    <div class="row py-2">
      <div class="col-1 my-auto">対象年度</div>
      <div class="col-1 my-auto">学生番号</div>
      <div class="col-1 my-auto">氏名</div>
      <div class="col-1 my-auto">学年</div>
      <div class="col-1 my-auto">研究室(気付)</div>
      <div class="col-5 my-auto">備考</div>
      <div class="col-2 d-flex justify-content-end">
        <%= link_to icon_with_text("plus-circle", "登録"), new_teaching_assistant_path, class: "btn btn-outline-primary" %>
      </div>
    </div>
    <%= render @teaching_assistants %>
  </div>
</div>
